@page "/Products/Edit/{id}"
@model EStore.web.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}


<h2 class="mt-5">Edit Product</h2>
<partial name="_Notification" />

@if (Model.product != null)
{
    <form class="mt-5" method="post">
        <div class="mb-3">
            <label for="titleAdd" class="form-label">Title</label>
            <input type="text" class="form-control" id="titleEdit" value="@Model.product.Title" asp-for="Product.Title" required>            
        </div>

        <div class="mb-4">
            <label for="@Html.IdFor(m => m.Product.Description)" class="form-label">Description</label>
            <textarea class="form-control" id="@Html.IdFor(m => m.Product.Description)" style="height: 100px" name="@Html.NameFor(m => m.Product.Description)" required>@Model.product.Description</textarea>             
        </div>

        <div class="row">
            <div class="col">
                <div class="input-group">
                    <span class="input-group-text">Image URL</span>    
                    <input type="text" class="form-control" placeholder="Copy the image URL here" value="@Model.product.PicURL" asp-for="Product.PicURL" required>
                </div>                
            </div>
            <div class="col-3">
                <div class="input-group">
                    <span class="input-group-text">$</span>    
                    <input type="text" class="form-control" placeholder="Enter the price of the product" value="@Model.product.Price" asp-for="Product.Price" required>
                </div>                
            </div>
             <div class="col-2">
              <select class="form-select" asp-for="Product.Category" required>  
                  <option value="@Model.product.Category" selected>@Model.product.Category</option>
                  <option value="TV">TV</option>
                  <option value="COMPUTERS">Computers</option>
                  <option value="CELLPHONES">Cellphones</option>
                  <option value="VIDEOGAMES">Videogames</option>
              </select>              
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary mt-4 me-2" type="submit"><i class="fa-solid fa-floppy-disk"></i> SAVE</button>  
            <button class="btn btn-danger mt-4" type="button" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"><i class="fa-solid fa-trash"></i> DELETE</button>            
        </div>

        <!-- CONFIRMATION MODAL -->
        <div class="modal" tabindex="-1" id="confirmDeleteModal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to delete this posting?</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-danger" type="submit" asp-page-handler="Delete"><i class="fa-solid fa-trash"></i> DELETE</button>
              </div>
            </div>
          </div>
        </div>

    </form>
}