@page
@model EStore.web.Pages.Cart.CheckoutModel


<h1><i class="fa-solid fa-cart-shopping"></i> Checkout</h1>

<div class="row mt-5">
    <div class="col"></div>
    <div class="col">
        <div class="card" >
          <div class="card-body">           
              <div class="text-center mb-3">
                  <h2>Pay Invoice</h2>
                  <hr />
                  <i class="fa-brands fa-cc-visa"></i>
                  <i class="fa-brands fa-cc-mastercard"></i>
                  <i class="fa-brands fa-cc-amex"></i>
                  <i class="fa-brands fa-cc-discover"></i>
              </div>
              <div>
                  <h5>Payment Amount</h5>
                  <h4>$100.00</h4>
              </div>
              <div>
                  <div class="mb-3 mt-4">
                    <label for="nameInput" class="form-label">Name on the card</label>
                    <input type="text" class="form-control" id="nameInput">                    
                  </div>
                  <div class="mb-3">
                    <label for="cardNum" class="form-label">Card Number</label>
                    <div class="input-group">
                      <input type="text" class="form-control">
                      <span class="input-group-text"><i class="fa-brands fa-cc-visa"></i></span>                      
                    </div>                 
                  </div>
                  <div class="row">
                    <div class="col">
                        <label for="cardExp" class="form-label">Expiration</label>
                        <input type="text" class="form-control" id="cardExp" placeholder="MM/YY"> 
                    </div>
                    <div class="col">
                        <label for="cardCode" class="form-label">Security Code</label>
                        <input type="text" class="form-control" id="cardCode">   
                    </div>
                  </div>
                  <div class="mt-3">
                      <label for="zipCode" class="form-label">Postal Code</label>
                      <input type="text" class="form-control" id="zipCode">  
                  </div>
                  <div class="container d-grid gap-2 mt-5">
                      <button class="btn btn-success">PAY $100.00</button>
                  </div>
              </div>
          </div>
        </div>
    </div>
    <div class="col"></div>
</div>